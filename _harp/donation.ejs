<div class="container-fluid donation-content">
  <ul class="row">
    <li class="col-md-8 col-md-push-4">
      <div class="panel-heading">
        <div class="panel-title">
           Make a Donation
        </div>
      </div>
      <div class="row no-gutter bs-wizard" role="tablist">
        <div class="col-xs-3 bs-wizard-step complete">
          <div class="text-center bs-wizard-stepnum">Amount</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#amount" class="bs-wizard-dot" role="tab" data-toggle="tab"></a>
        </div>

        <div class="col-xs-3 bs-wizard-step complete"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">Payment</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#payment" class="bs-wizard-dot" role="tab" data-toggle="tab"></a>
        </div>

        <div class="col-xs-3 bs-wizard-step active"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">Billing</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#billing" class="bs-wizard-dot" role="tab" data-toggle="tab"></a>
        </div>

        <div class="col-xs-3 bs-wizard-step disabled"><!-- active -->
          <div class="text-center bs-wizard-stepnum">Success</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#complete" class="bs-wizard-dot" role="tab" data-toggle="tab"></a>
        </div>
      </div>
      <div class="inner">
        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane" id="amount">
            <div class="inner">
              <div class="row">
                <div class="col-xs-3 col-md-6 col-lg-3">
                  <button class="btn btn-lg btn-block btn-default">$20</button>
                </div>
                <div class="col-xs-3 col-md-6 col-lg-3">
                  <button class="btn btn-lg btn-block btn-default">$20</button>
                </div>
                <div class="col-xs-3 col-md-6 col-lg-3">
